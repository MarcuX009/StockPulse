<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stockNameDisplayLayout"
            android:layout_width="95sp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Stock "
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/stockValueDisplayLayout"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15sp"
            android:gravity="right"
            android:text="Stock Value"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/stockPercentUpDisplayLayout"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25sp"
            android:gravity="right"
            android:text="Stock Percent"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:textStyle="italic"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/stockPercentDownDisplayLayout"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25sp"
            android:gravity="right"
            android:text="Stock Percent"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="italic"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>