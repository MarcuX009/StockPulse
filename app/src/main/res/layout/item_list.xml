<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#0856AE"
    app:cardCornerRadius="7dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stockNameDisplayLayout"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:gravity="left"
            android:text="Stock "
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stockValueDisplayLayout"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@+id/stockNameDisplayLayout"
            android:text="Value"
            android:textColor="#E6A027"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/stockPercentUpDisplayLayout"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12sp"
            android:layout_toRightOf="@+id/stockValueDisplayLayout"
            android:gravity="left"
            android:text="Stock Percent"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:textStyle="italic"
            android:visibility="gone" />

        <TextView
            android:id="@+id/stockPercentDownDisplayLayout"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/stockValueDisplayLayout"
            android:gravity="left"
            android:text="Stock Percent"
            android:textColor="@color/red2"
            android:textSize="20sp"
            android:textStyle="italic"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/arrowDownLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_down"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/arrowUpLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_up"
            android:visibility="gone" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>