<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="#0856AE"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stockNameDisplayLayout"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="7dp"
            android:gravity="left"
            android:text="Stock "
            android:textColor="#E6A027"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stockValueDisplayLayout"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/stockNameDisplayLayout"
            android:text="Value"
            android:textColor="#E6A027"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/stockPercentUpDisplayLayout"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:layout_toRightOf="@+id/stockValueDisplayLayout"
            android:text="Stock Percent"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:textStyle="italic"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/stockPercentDownDisplayLayout"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/stockValueDisplayLayout"
            android:text="Stock Percent"
            android:gravity="left"
            android:textColor="#BD1414"
            android:textSize="20sp"
            android:textStyle="italic"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/arrowDownLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src ="@drawable/ic_down"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/stockPercentDownDisplayLayout"
            android:layout_marginLeft="15dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/arrowUpLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src ="@drawable/ic_up"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/stockPercentUpDisplayLayout"
            android:layout_marginLeft="15dp"
            android:visibility="gone"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>